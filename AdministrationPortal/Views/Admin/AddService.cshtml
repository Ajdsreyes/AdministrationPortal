@model AdministrationPortal.Models.ViewModels.ServiceVM
@{
    ViewData["Title"] = "Add Barangay Service";
    Layout = null; // Removes the sidebar/navbar to match the login screen style
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iAssist</title>
    <link rel="stylesheet" href="~/css/admin-login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body class="login-body">

    <div class="login-container">
        <div class="login-card">
            <div class="login-logo">
                <i class="bi bi-plus-circle-dotted" style="font-size: 3rem; color: #28a745;"></i>
            </div>

            <h2>Add New Service</h2>
            <p>Enter the details for the new barangay service.</p>

            <form asp-action="AddService" method="post">
                @if (TempData["Error"] != null)
                {
                    <div style="color: #ff4d4d; margin-bottom: 15px; font-size: 0.9rem;">
                        @TempData["Error"]
                    </div>
                }

                <div class="form-group">
                    <label>Service Name</label>
                    <input asp-for="ServiceName"
                           class="form-control"
                           placeholder="e.g. Barangay Clearance"
                           required />
                </div>

                <div class="form-group">
                    <label>Icon Class (Bootstrap)</label>
                    <input asp-for="Icon"
                           class="form-control"
                           placeholder="bi-file-earmark-text" />
                    <small style="display:block; margin-top:5px; color:#aaa; font-size:0.75rem;">
                        Example: bi-person-badge, bi-shield-check
                    </small>
                </div>

                <div class="form-actions center">
                    <button type="submit" class="btn-login">
                        Create Service
                    </button>
                </div>
            </form>

            <div class="login-footer">
                <a asp-action="BarangayServices" asp-controller="Admin">
                    <i class="bi bi-arrow-left"></i> Back to Services
                </a>
            </div>
        </div>
    </div>

</body>
</html>