@model List<AdministrationPortal.Models.ViewModels.ServiceRequestVM>

@{
    ViewData["Title"] = "Service Requests";
}

<div class="page-header">
    <div>
        <h2>Barangay Service Requests</h2>
        <p>Monitor and process all resident service requests</p>
    </div>

    <div class="filter-bar">
        <button class="btn-filter active" data-status="all">All</button>
        <button class="btn-filter" data-status="pending">Pending</button>
        <button class="btn-filter" data-status="approved">Approved</button>
        <button class="btn-filter" data-status="readyforclaim">Ready for Claim</button>
    </div>
</div>

<div class="table-card">
    <table class="user-table">
        <thead>
            <tr>
                <th>Resident</th>
                <th>Service</th>
                <th>Date to Claim</th>
                <th>Time</th>
                <th>Status</th>
                <th style="width:120px;">Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var r in Model)
            {
                @* Changed r.Status to r.StatusName *@
                <tr data-status="@r.StatusName.ToLower().Replace(" ", "")">

                    <td>
                        <div class="user-info">
                            @* Changed r.UploadedPhotoUrl to r.UploadPath *@
                            <img src="@r.UploadPath" class="avatar" onerror="this.src='/images/default-avatar.png'" />
                            <span>@r.FullName</span>
                        </div>
                    </td>

                    @* Changed r.ServiceType to r.ServiceName *@
                    <td>@r.ServiceName</td>

                    <td>
                        @(r.DateToClaim.HasValue
                                            ? r.DateToClaim.Value.ToString("MMM dd, yyyy")
                                            : "—")
                    </td>

                    <td>
                        @(r.TimeToClaim.HasValue
                                            ? r.TimeToClaim.Value.ToString(@"hh\:mm")
                                            : "—")
                    </td>

                    <td>
                        @* Changed r.Status to r.StatusName *@
                        <span class="status @r.StatusName.ToLower().Replace(" ", "")">
                            @r.StatusName
                        </span>
                    </td>

                    <td class="actions">
                        <i class="bi bi-eye action-icon"
                           title="View Details"
                           @* Changed r.Id to r.RequestId *@
                           onclick="location.href='@Url.Action("ViewServiceRequest", "Admin", new { id = r.RequestId })'">
                        </i>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.querySelectorAll(".btn-filter").forEach(btn => {
            btn.addEventListener("click", () => {
                document.querySelectorAll(".btn-filter")
                    .forEach(b => b.classList.remove("active"));

                btn.classList.add("active");

                const filter = btn.dataset.status;

                document.querySelectorAll("tbody tr").forEach(row => {
                    const status = row.dataset.status;
                    row.style.display =
                        filter === "all" || status === filter ? "" : "none";
                });
            });
        });
    </script>
}