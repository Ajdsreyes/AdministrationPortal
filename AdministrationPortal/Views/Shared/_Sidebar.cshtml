@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<aside class="sidebar">
    <div class="sidebar-top">
        <h1>iAssist</h1>
        <span>Administration’s Portal</span>
    </div>

    <ul class="nav">
        <li class="@(currentAction == "Dashboard" ? "active" : "")">
            <a asp-controller="Admin" asp-action="Dashboard">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </li>

        <li class="@(currentAction == "ManageUsers" ? "active" : "")">
            <a asp-controller="Admin" asp-action="ManageUsers">
                <i class="bi bi-people"></i>
                <span>Manage Users</span>
            </a>
        </li>

        <li class="@(currentAction == "BarangayServices" ? "active" : "")">
            <a asp-controller="Admin" asp-action="BarangayServices">
                <i class="bi bi-file-earmark-text"></i>
                <span>Barangay Services</span>
            </a>
        </li>

        <li class="@(currentAction == "AdminProfile" ? "active" : "")">
            <a asp-controller="Admin" asp-action="AdminProfile">
                <i class="bi bi-person-circle"></i>
                <span>Admin Profile</span>
            </a>
        </li>
    </ul>

    <!-- 🔻 LOGOUT (BOTTOM) -->
    <div class="sidebar-logout">
        <button class="logout-btn" onclick="openLogoutModal()">
            <i class="bi bi-box-arrow-right"></i>
            Logout
        </button>
    </div>
</aside>

<!-- 🔒 LOGOUT CONFIRMATION MODAL -->
<div id="logoutModal" class="logout-modal">
    <div class="logout-modal-content">
        <h4>Confirm Logout</h4>
        <p>Are you sure you want to logout?</p>

        <div class="logout-actions">
            <button class="btn-cancel" onclick="closeLogoutModal()">Cancel</button>

            <a asp-controller="Admin"
               asp-action="Logout"
               class="btn-logout">
                Logout
            </a>
        </div>
    </div>
</div>
