@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}


<aside class="sidebar">
    <div class="sidebar-top">
        <h1>iAssist</h1>
        <span>Administration’s Portal</span>
    </div>

    <ul class="nav">

        <li class="@(currentAction == "Dashboard" ? "active" : "")">
            <a asp-controller="Admin" asp-action="Dashboard">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </li>

        <li class="@(currentAction == "ManageUsers" ? "active" : "")">
            <a asp-controller="Admin" asp-action="ManageUsers">
                <i class="bi bi-people"></i>
                <span>Manage Users</span>
            </a>
        </li>

        <li class="@(currentAction == "BarangayServices" ? "active" : "")">
            <a asp-controller="Admin" asp-action="BarangayServices">
                <i class="bi bi-file-earmark-text"></i>
                <span>Barangay Services</span>
            </a>
        </li>

        <li class="@(currentAction == "HelpCenter" ? "active" : "")">
            <a asp-controller="Admin" asp-action="HelpCenter">
                <i class="bi bi-question-circle"></i>
                <span>Help Center</span>
            </a>
        </li>

        <li class="@(currentAction == "Settings" ? "active" : "")">
            <a asp-controller="Admin" asp-action="Settings">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </a>
        </li>

    </ul>

    <div class="logout">Logout</div>
</aside>
